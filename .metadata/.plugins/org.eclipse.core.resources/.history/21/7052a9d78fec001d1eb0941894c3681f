public class FourthBit {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		System.out.println(fourthBit(23));

	}

	public static int fourthBit(int number) {
        int bit = 0;
        String binaryString = Integer.toBinaryString(number);
        System.out.println(binaryString.charAt(3));
        return Integer.parseInt(binaryString, binaryString.charAt(3));
    }
}
